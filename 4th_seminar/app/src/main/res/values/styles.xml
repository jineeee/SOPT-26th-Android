<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="PopularTags" parent="@style/Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">#c3c3c3</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/notosans_medium</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="tab_medium" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/notosans_medium</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="tab_semibold" parent="@android:style/TextAppearance.Widget.TabWidget">
        <item name="android:fontFamily">@font/notosans_bold</item>
        <item name="android:textSize">13sp</item>
    </style>

</resources>
