<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddFragment">

    <TextView
        android:id="@+id/frag_add_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모임 만들기"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"
        android:textSize="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/frag_add_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모임 이름"
        android:textSize="15dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/frag_add_title"
        app:layout_constraintStart_toStartOf="@id/frag_add_title"/>

    <EditText
        android:id="@+id/frag_add_et_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="내용을 입력해주세요"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/frag_add_name"
        app:layout_constraintStart_toStartOf="@id/frag_add_name"/>

    <TextView
        android:id="@+id/frag_add_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모임 날짜"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/frag_add_et_name"
        app:layout_constraintStart_toStartOf="@id/frag_add_et_name"/>

    <EditText
        android:id="@+id/frag_add_et_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="내용을 입력해주세요"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/frag_add_tv_date"
        app:layout_constraintStart_toStartOf="@id/frag_add_tv_date"/>

    <TextView
        android:id="@+id/frag_add_tv_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모임 장소"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/frag_add_et_date"
        app:layout_constraintStart_toStartOf="@id/frag_add_et_date"/>

    <EditText
        android:id="@+id/frag_add_et_place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="내용을 입력해주세요"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/frag_add_tv_place"
        app:layout_constraintStart_toStartOf="@id/frag_add_tv_place"/>

    <TextView
        android:id="@+id/frag_add_tv_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="모임 인원"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/frag_add_et_place"
        app:layout_constraintStart_toStartOf="@id/frag_add_et_place"/>

    <EditText
        android:id="@+id/frag_add_et_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="내용을 입력해주세요"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintTop_toBottomOf="@id/frag_add_tv_count"
        app:layout_constraintStart_toStartOf="@id/frag_add_tv_count"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="모임 만들기"
        app:layout_constraintTop_toBottomOf="@id/frag_add_et_count"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>